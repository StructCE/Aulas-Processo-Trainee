<table>
  <tr>
    <th> Nome </th>
    <th> Email </th>
  </tr>
  <% @users.each do |u| %>  
    <tr>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= link_to "Apagar", user_path(u),class: 'btn btn-danger', method: :delete%></td>
      <td><%= link_to "Editar", edit_user_path(u), class: 'btn btn-secondary' %></td>
    </tr>
  <% end %>
</table>